@using TaskMangmentSYS.Models
@{
    Layout = null;
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Task</title>

    <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/addTask.css">
</head>
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h1>Log in</h1>
    <fieldset>
        @Html.AntiForgeryToken()
        <legend><span class="number">1</span>Info</legend>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label for="name" class="labelTask">Email</label>
        @Html.EditorFor(model => model.Email, new { id = "name", name = "user_name" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <label for="name" class="labelTask">Password</label>
        @Html.EditorFor(model => model.Password, new { id = "name", name = "user_name" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        <label for="name" class="labelTask">Remember me?</label>

                    @Html.CheckBoxFor(m => m.RememberMe)
                  

        <div >
            <button type="submit">Log in </button>
        </div>
        <p>
            @Html.ActionLink("Register as a new user", "Register")
        </p>
        @* Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}